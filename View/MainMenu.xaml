<Window x:Class="AutoService.Views.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoService"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
TextElement.Foreground="{DynamicResource MaterialDesignBody}"
TextElement.FontWeight="Regular"
TextElement.FontSize="13"
TextOptions.TextFormattingMode="Ideal"
TextOptions.TextRenderingMode="Auto"
Background="{DynamicResource MaterialDesignPaper}"
FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <materialDesign:Card>
            <TabControl
    materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
    SnapsToDevicePixels="True"
    Style="{StaticResource MaterialDesignNavigationRailTabControl}"
    TabStripPlacement="Left">
                <materialDesign:NavigationRailAssist.FloatingContent>
                    <Button
        Margin="8"
                        Command="{Binding OpenAddRegCommand}"
        Content="{materialDesign:PackIcon Kind=BookPlus, Size=22}"
        Style="{StaticResource MaterialDesignFloatingActionSecondaryButton}" />
                </materialDesign:NavigationRailAssist.FloatingContent>
                <TabItem MinWidth="110">
                    <TabItem.Header>
                        <StackPanel
          Width="auto"
          Height="auto">
                            <materialDesign:PackIcon
            Width="24"
            Height="24"
            HorizontalAlignment="Center"
            Kind="AccountBox" />
                            <TextBlock
            HorizontalAlignment="Center"
            Text="Профиль" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32*"/>
                            <RowDefinition Height="43*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="128*"/>
                                <ColumnDefinition Width="217*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" CornerRadius="5" Margin="20">
                                <Border.Background>
                                    <ImageBrush Stretch="UniformToFill" ImageSource="/Source/profile.jpg"/>
                                </Border.Background>
                            </Border>
                            <Grid Grid.Column="1">
                                <materialDesign:Card
                                    Margin="18"
                                    Padding="5"
Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
  Background="{DynamicResource PrimaryHueDarkForegroundBrush}">
                                    <Grid>
                                        <Button
HorizontalAlignment="Left"
VerticalAlignment="Bottom"
Content="{materialDesign:PackIcon Kind=Pencil,Size=22}"
Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}" />
                                        
                                        <StackPanel>
                                            <TextBlock
                                             Padding="2"
    Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                        HorizontalAlignment="Right"
    Text="Иванов Иван Иванович" />
                                            <TextBlock
                                             Padding="2"
Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                    HorizontalAlignment="Right"
Text="Платиновый уровень" />
                                            <TextBlock
                                             Padding="2"
Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                    HorizontalAlignment="Right"
Text="+7(952)812" />
                                            <TextBlock
                                             Padding="2"
Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                    HorizontalAlignment="Right"
Text="01.01.2000" />

                                        </StackPanel>
                                    </Grid>


                                </materialDesign:Card>
                            </Grid>
                                
                        </Grid>
                        <Grid Grid.Row="1">
                            <StackPanel>
                                <TextBlock
                                    Text="Автомобили"
                                    Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                    Padding="5, 0, 0, 0"/>
                                <DataGrid
                                    ItemsSource="{Binding Cars}"
              CanUserAddRows="True"
AutoGenerateColumns="False"
  x:Name="itemsGrid"
      >
                                    <DataGrid.Columns>
                                        
                                        <DataGridTextColumn Width="*" IsReadOnly="True" CanUserResize="False" Binding="{Binding brand}">
                                            <DataGridTextColumn.Header>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <materialDesign:PackIcon Width="24" HorizontalAlignment="Right" VerticalAlignment="Center" Kind="Marker"/>
                                                    <TextBlock Text="Марка"/>
                                                </StackPanel>
                                            </DataGridTextColumn.Header>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Width="*" IsReadOnly="True" CanUserResize="False" Binding="{Binding model}">
                                            <DataGridTextColumn.Header>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <materialDesign:PackIcon Width="24" HorizontalAlignment="Right" VerticalAlignment="Center" Kind="CarSports"/>
                                                    <TextBlock Text="Модель"/>
                                                </StackPanel>
                                            </DataGridTextColumn.Header>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Width="*" IsReadOnly="True" CanUserResize="False" Binding="{Binding color}">
                                            <DataGridTextColumn.Header>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <materialDesign:PackIcon Width="24" HorizontalAlignment="Right" VerticalAlignment="Center" Kind="Color"/>
                                                    <TextBlock Text="Цвет"/>
                                                </StackPanel>
                                            </DataGridTextColumn.Header>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Width="*" IsReadOnly="True" CanUserResize="False" Binding="{Binding mileage}">
                                            <DataGridTextColumn.Header>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <materialDesign:PackIcon Width="24" HorizontalAlignment="Right" VerticalAlignment="Center" Kind="Counter"/>
                                                    <TextBlock Text="Пробег"/>
                                                </StackPanel>
                                            </DataGridTextColumn.Header>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>

                                </DataGrid>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem MinWidth="110">
                    <TabItem.Header>
                        <StackPanel
          Width="auto"
          Height="auto">
                            <materialDesign:PackIcon
            Width="24"
            Height="24"
            HorizontalAlignment="Center"
            Kind="BookMultiple" />
                            <TextBlock
            HorizontalAlignment="Center"
            Text="Записи" />
                        </StackPanel>
                    </TabItem.Header>
                    <StackPanel>
                        <TextBlock
         HorizontalAlignment="Left"
         Text="Записи"
         Style="{StaticResource MaterialDesignHeadline5TextBlock}"
         Margin="10"/>
                        <StackPanel>
                            <StackPanel 
             Background="LightGoldenrodYellow" 
             VerticalAlignment="Center" 
             Orientation="Horizontal" 
             Margin="0,5,0,5"
             >
                                <TextBlock Text="10.10.2023" Margin="5"/>
                                <TextBlock Text ="Замена тормозных колодок" Margin="5"/>
                                <TextBlock Text="Ваз 21099" Margin="5"/>
                                <TextBlock Text="Иванов И.И." Margin="5"/>
                                <TextBlock Text="(На рассмотрении)" Margin="5"/>
                            </StackPanel>
                            <StackPanel 
             Background="LightGreen"
             VerticalAlignment="Center"
             Orientation="Horizontal"
                                 Margin="0,5,0,5"
             >
                                <TextBlock Text="10.10.2023" Margin="5"/>
                                <TextBlock Text ="Замена тормозных колодок" Margin="5"/>
                                <TextBlock Text="Ваз 21099" Margin="5"/>
                                <TextBlock Text="Иванов И.И." Margin="5"/>
                                <TextBlock Text="(Принято)" Margin="5"/>
                            </StackPanel>
                            <StackPanel 
             Background="LightPink"
             VerticalAlignment="Center" 
             Orientation="Horizontal" 
                                 Margin="0,5,0,5"
             >
                                <TextBlock Text="10.10.2023" Margin="5"/>
                                <TextBlock Text ="Замена тормозных колодок" Margin="5"/>
                                <TextBlock Text="Ваз 21099" Margin="5"/>
                                <TextBlock Text="Иванов И.И." Margin="5"/>
                                <TextBlock Text="(Отклонено)" Margin="5"/>
                            </StackPanel>
                            <StackPanel 
             Background="LightGray"
             VerticalAlignment="Center" 
             Orientation="Horizontal" 
                                 Margin="0,5,0,5"
             >
                                <TextBlock Text="10.10.2023" Margin="5"/>
                                <TextBlock Text ="Замена тормозных колодок" Margin="5"/>
                                <TextBlock Text="Ваз 21099" Margin="5"/>
                                <TextBlock Text="Иванов И.И." Margin="5"/>
                                <TextBlock Text="(Завершено)" Margin="5"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                </TabItem>
                <TabItem MinWidth="110">
                    <TabItem.Header>
                        <StackPanel
          Width="auto"
          Height="auto">
                            <materialDesign:PackIcon
            Width="24"
            Height="24"
            HorizontalAlignment="Center"
            Kind="CogBox" />
                            <TextBlock
            HorizontalAlignment="Center"
            Text="Настройки" />
                        </StackPanel>
                    </TabItem.Header>
                    <StackPanel
        Margin="16">
                        <TextBlock
          Margin="0,0,0,8"
          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
          Text="Photos" />
                        <TextBlock>
          <Run
            Text="tab 3 content. Default look and behaviors." />
          <LineBreak />
          <LineBreak />
          <Run
            FontStyle="Italic">
          Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit...
        </Run>
                        </TextBlock>
                    </StackPanel>
                </TabItem>
                <TabItem MinWidth="110">
                    <TabItem.Header>
                        <StackPanel
          Width="auto"
          Height="auto">
                            <materialDesign:PackIcon
            Width="24"
            Height="24"
            HorizontalAlignment="Center"
            Kind="InformationSlabBox" />
                            <TextBlock
            HorizontalAlignment="Center"
            Text="О программе" />
                        </StackPanel>
                    </TabItem.Header>
                    <StackPanel
        Margin="16">
                        <TextBlock
          Margin="0,0,0,8"
          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
          Text="Sounds" />
                        <TextBlock>
          <Run
            Text="tab 4 content. Default look and behaviors." />
          <LineBreak />
          <LineBreak />
          <Run
            FontStyle="Italic">
          Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit...
        </Run>
                        </TextBlock>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </materialDesign:Card>
    </Grid>
</Window>
